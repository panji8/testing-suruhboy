                status: 'pending',
                paymentDate: null,
                reference: null
            },
            'agentC': { 
                name: 'Agent C', 
                avatar: 'C', 
                color: '#10b981',
                orders: 28, 
                netAmount: 19500000, 
                adminFee: 445000,
                status: 'paid',
                paymentDate: '2024-10-04',
                reference: 'TF-20241004-003'
            },
            'agentD': { 
                name: 'Agent D', 
                avatar: 'D', 
                color: '#f59e0b',
                orders: 22, 
                netAmount: 15700000, 
                adminFee: 358000,
                status: 'overdue',
                paymentDate: null,
                reference: null
            },
            'agentE': { 
                name: 'Agent E', 
                avatar: 'E', 
                color: '#ef4444',
                orders: 15, 
                netAmount: 9800000, 
                adminFee: 225000,
                status: 'pending',
                paymentDate: null,
                reference: null
            }
        };

        const weeksData = {
            40: { name: 'Week 40', range: '30 Sep - 6 Okt', totalOrders: 142, netAmount: 94800000, adminFee: 2200000 },
            39: { name: 'Week 39', range: '23 Sep - 29 Sep', totalOrders: 128, netAmount: 87600000, adminFee: 2050000 },
            38: { name: 'Week 38', range: '16 Sep - 22 Sep', totalOrders: 118, netAmount: 82500000, adminFee: 1920000 }
        };

        // Format currency
        function formatCurrency(amount) {
            if (amount >= 1000000) {
                return `Rp ${(amount / 1000000).toFixed(1)}M`;
            } else if (amount >= 1000) {
                return `Rp ${(amount / 1000).toFixed(1)}K`;
            }
            return `Rp ${amount}`;
        }

        // Format number with dots
        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        }

        // Format date
        function formatDate(dateStr) {
            if (!dateStr) return '-';
            const date = new Date(dateStr);
            return date.toLocaleDateString('id-ID', {
                day: '2-digit',
                month: 'short',
                year: 'numeric'
            });
        }

        // Get status badge
        function getStatusBadge(status) {
            switch(status) {
                case 'paid':
                    return '<span class="status-indicator status-paid"><i class="fas fa-check-circle"></i> Paid</span>';
                case 'pending':
                    return '<span class="status-indicator status-pending"><i class="fas fa-clock"></i> Pending</span>';
                case 'overdue':
                    return '<span class="status-indicator status-overdue"><i class="fas fa-exclamation-circle"></i> Overdue</span>';
                default:
                    return '<span class="status-indicator status-pending">Pending</span>';
            }
        }

        // Render agent table
        function renderAgentTable(filter = 'all') {
            const tbody = document.getElementById('agentTableBody');
            tbody.innerHTML = '';
            
            let agents = Object.entries(agentsData);
            
            // Apply filter
            if (filter === 'pending') {
                agents = agents.filter(([_, agent]) => agent.status === 'pending' || agent.status === 'overdue');
            } else if (filter === 'paid') {
                agents = agents.filter(([_, agent]) => agent.status === 'paid');
            }
            
            // Sort by net amount (descending)
            agents.sort((a, b) => b[1].netAmount - a[1].netAmount);
            
            agents.forEach(([id, agent]) => {
                const row = document.createElement('tr');
                row.dataset.agentId = id;
                
                row.innerHTML = `
                    <td>
                        <div class="agent-cell">
                            <div class="agent-avatar" style="background-color: ${agent.color}">
                                ${agent.avatar}
                            </div>
                            <span class="agent-name">${agent.name}</span>
                        </div>
                    </td>
                    <td><strong>${agent.orders}</strong></td>
                    <td class="amount">${formatCurrency(agent.netAmount)}</td>
                    <td class="amount">${formatCurrency(agent.adminFee)}</td>
                    <td>${getStatusBadge(agent.status)}</td>
                    <td>
                        <button class="btn btn-outline" style="padding: 6px 12px; font-size: 12px;" onclick="selectAgent('${id}')">
                            <i class="fas fa-edit"></i> Bayar
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        // Render payment history
        function renderPaymentHistory() {
            const container = document.getElementById('paymentHistory');
            container.innerHTML = '';
            
            // Get paid agents
            const paidAgents = Object.entries(agentsData)
                .filter(([_, agent]) => agent.status === 'paid')
                .sort((a, b) => new Date(b[1].paymentDate) - new Date(a[1].paymentDate))
                .slice(0, 3); // Show only last 3 payments
            
            if (paidAgents.length === 0) {
                container.innerHTML = '<p style="color: var(--gray-500); font-size: 13px; text-align: center;">Belum ada riwayat pembayaran</p>';
                return;
            }
            
            paidAgents.forEach(([id, agent]) => {
                const item = document.createElement('div');
                item.className = 'history-item';
                
                item.innerHTML = `
                    <div>
                        <div style="font-weight: 500;">${agent.name}</div>
                        <div class="history-date">${formatDate(agent.paymentDate)} • ${agent.reference}</div>
                    </div>
                    <div class="history-amount">${formatCurrency(agent.adminFee)}</div>
                `;
                
                container.appendChild(item);
            });
        }

        // Select agent for payment
        function selectAgent(agentId) {
            const agent = agentsData[agentId];
            
            // Update payment form
            document.getElementById('selectedAgent').textContent = agent.name;
            document.getElementById('selectedAdmin').textContent = formatCurrency(agent.adminFee);
            document.getElementById('amountDue').textContent = formatCurrency(agent.adminFee);
            
            // Set today's date as default
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('paymentDate').value = today;
            
            // Generate reference number
            if (!agent.reference) {
                const ref = `TF-${today.replace(/-/g, '')}-${Math.floor(Math.random() * 1000).toString().padStart(3, '0')}`;
                document.getElementById('referenceNumber').value = ref;
            } else {
                document.getElementById('referenceNumber').value = agent.reference;
            }
            
            // Scroll to payment form
            document.querySelector('.payment-card').scrollIntoView({ behavior: 'smooth' });
            
            // Highlight selected agent row
            document.querySelectorAll('#agentTableBody tr').forEach(row => {
                row.style.backgroundColor = row.dataset.agentId === agentId ? 'var(--gray-50)' : '';
            });
        }

        // Handle payment form submission
        function handlePaymentSubmit(e) {
            e.preventDefault();
            
            const agentName = document.getElementById('selectedAgent').textContent;
            const amount = document.getElementById('amountDue').textContent;
            const method = document.getElementById('paymentMethod').value;
            const date = document.getElementById('paymentDate').value;
            const reference = document.getElementById('referenceNumber').value;
            
            if (!agentName || agentName === '-') {
                alert('Silakan pilih agent terlebih dahulu');
                return;
            }
            
            // Find agent by name
            let agentId = null;
            for (const [id, agent] of Object.entries(agentsData)) {
                if (agent.name === agentName) {
                    agentId = id;
                    break;
                }
            }
            
            if (agentId) {
                // Update agent status
                agentsData[agentId].status = 'paid';
                agentsData[agentId].paymentDate = date;
                agentsData[agentId].reference = reference;
                
                // Update table and history
                renderAgentTable(document.querySelector('.tab-btn.active').dataset.tab);
                renderPaymentHistory();
                
                // Reset form
                document.getElementById('paymentForm').reset();
                document.getElementById('selectedAgent').textContent = '-';
                document.getElementById('selectedAdmin').textContent = '-';
                document.getElementById('amountDue').textContent = '-';
                
                // Show success message
                alert(`Pembayaran admin fee untuk ${agentName} sebesar ${amount} berhasil dikonfirmasi!`);
                
                // Update stats
                updateStats();
            }
        }

        // Update stats based on selected week and agent
        function updateStats() {
            const week = document.getElementById('weekSelect').value;
            const agent = document.getElementById('agentSelect').value;
            
            if (agent === 'all') {
                // Show aggregate data for all agents
                document.getElementById('totalOrders').textContent = weeksData[week].totalOrders;
                document.getElementById('netAmount').textContent = formatCurrency(weeksData[week].netAmount);
                document.getElementById('adminFee').textContent = formatCurrency(weeksData[week].adminFee);
                
                const avgOrder = weeksData[week].netAmount / weeksData[week].totalOrders;
                document.getElementById('avgOrder').textContent = formatCurrency(avgOrder);
            } else {
                // Show data for specific agent
                const agentData = agentsData[agent];
                document.getElementById('totalOrders').textContent = agentData.orders;
                document.getElementById('netAmount').textContent = formatCurrency(agentData.netAmount);
                document.getElementById('adminFee').textContent = formatCurrency(agentData.adminFee);
                
                const avgOrder = agentData.netAmount / agentData.orders;
                document.getElementById('avgOrder').textContent = formatCurrency(avgOrder);
            }
        }

        // Initialize the dashboard
        function initDashboard() {
            updateStats();
            renderAgentTable();
            renderPaymentHistory();
            
            // Add event listeners
            document.getElementById('weekSelect').addEventListener('change', updateStats);
            document.getElementById('agentSelect').addEventListener('change', updateStats);
            
            // Tab navigation
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    renderAgentTable(this.dataset.tab);
                });
            });
            
            // Payment form
            document.getElementById('paymentForm').addEventListener('submit', handlePaymentSubmit);
            
            // Auto-generate reference number if empty
            document.getElementById('paymentDate').addEventListener('change', function() {
                const refInput = document.getElementById('referenceNumber');
                if (!refInput.value && this.value) {
                    const dateStr = this.value.replace(/-/g, '');
                    const ref = `TF-${dateStr}-${Math.floor(Math.random() * 1000).toString().padStart(3, '0')}`;
                    refInput.value = ref;
                }
            });
            
            // Add animation on scroll
            const observerOptions = {
                threshold: 0.1
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('fade-in');
                    }
                });
            }, observerOptions);
            
            document.querySelectorAll('.stat-card, .table-card, .payment-card').forEach(el => {
                observer.observe(el);
            });
            
            // Select first agent by default
            setTimeout(() => {
                selectAgent('agentB'); // Select agent B (pending payment) as example
            }, 500);
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', initDashboard);
    </script>
</body>
</html>
```

Fitur Utama Dashboard Suruhboy Style:

1. Tampilan Clean & Modern:

· Design minimalis seperti Suruhboy
· Warna biru profesional dengan aksen ungu/hijau
· Shadow dan border yang subtle
· Typography yang rapi dan readable

2. Stat Cards yang Informatif:

· Ikon warna-warni dengan gradient
· Badge persentase naik/turun
· Meta informasi di bawah angka

3. Tabel Agent Lengkap:

· Avatar warna untuk tiap agent
· Status pembayaran (Paid, Pending, Overdue)
· Tombol "Bayar" untuk setiap agent
· Tab filter: All, Pending Payment, Paid

4. Form Pembayaran Admin:

· Metode Pembayaran: Transfer Bank, Virtual Account, E-Wallet, Cash
· Tanggal Pembayaran: Date picker
· No. Referensi: Auto-generate dari tanggal
· Checkbox Konfirmasi: "Saya konfirmasi bahwa admin fee sudah dibayarkan"
· Tombol Konfirmasi: Berwarna hijau dengan icon checklist

5. Riwayat Pembayaran:

· Menampilkan 3 pembayaran terakhir
· Nama agent, tanggal, dan nominal
· No. referensi untuk tracking

6. Workflow Pembayaran:

1. Klik tombol "Bayar" pada agent di tabel
2. Form pembayaran otomatis terisi dengan data agent
3. Isi metode, tanggal, dan referensi
4. Centang konfirmasi pembayaran
5. Klik "Konfirmasi Pembayaran"
6. Status agent berubah dari "Pending" → "Paid"
7. Riwayat pembayaran terupdate

7. Responsive Design:

· Layout menyesuaikan ukuran layar
· Tabel scrollable di mobile
· Tombol dan form yang mudah di-tap

Dashboard ini ready untuk digunakan langsung! Cukup copy code ke file HTML dan buka di browser.